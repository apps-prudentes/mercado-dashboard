{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist/ml-dash",
    "devCommand": "npm start",
    "installCommand": "npm install",
    "framework": "angular",
    "rewrites": [
        {
            "source": "/api/cron/(.*)",
            "destination": "/api/cron/$1"
        },
        {
            "source": "/api/jobs/(.*)",
            "destination": "/api/jobs/$1"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/cron/auto-publish",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/cron/refresh-tokens",
            "schedule": "0 * * * *"
        }
    ]
}